#include <iostream>
#include <iomanip>

int main() {
    float x, y;

	std::cout << "Podaj x: ";
    std::cin >> x;

    std::cout << "Podaj y: ";
    std::cin >> y;

    float suma = x + y;
    float roznica = x - y;
    float iloczyn = x * y;
    float iloraz;

    if (y != 0) { 
        iloraz = x / y;
    } else {
        std::cout << "Nie dzieli sie przez zero!" << std::endl;
        iloraz = 0; 
    }

    std::cout << std::fixed << std::setprecision(2);
    std::cout << "Suma: " << suma << std::endl;
    std::cout << "Roznica: " << roznica << std::endl;
    std::cout << "Iloczyn: " << iloczyn << std::endl;
    if (y != 0) {
        std::cout << "Iloraz: " << iloraz << std::endl;
    }

    return 0;
}
