#include <iostream>
#include <vector>

int main() {
    int n;

    std::cout << "Podaj liczbe poziomow trojkata Pascala: ";
    std::cin >> n;

    if (n <= 0) {
        std::cout << "Liczba poziomow musi byc dodatnia" << std::endl;
        return 1;
    }

    std::vector<std::vector<int > > pascal(n);

    for (int i = 0; i < n; i++) {
        pascal[i].resize(i + 1); 
        pascal[i][0] = pascal[i][i] = 1; 

        for (int j = 1; j < i; j++) {
            pascal[i][j] = pascal[i - 1][j - 1] + pascal[i - 1][j];
        }
    }

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            std::cout << " "; 
        }
        for (int j = 0; j <= i; j++) {
            std::cout << pascal[i][j] << " ";
        }
        std::cout << std::endl;
    }

    return 0;
}
